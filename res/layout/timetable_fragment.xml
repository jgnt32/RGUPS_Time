<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
 	xmlns:app="http://schemas.android.com/apk/res/ru.rgups.time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lesson_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 ноября"
                android:textSize="20dp" />
            
           <TextView
                android:id="@+id/lesson_current_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Среда"
                android:textSize="20dp" />

        </LinearLayout>

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lesson_selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 ноября"
                android:textSize="20dp" />
            
           <TextView
                android:id="@+id/lesson_selected_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Четверг"
                android:textSize="20dp" />

        </LinearLayout>
        
        
    </LinearLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
         <org.lucasr.twowayview.TwoWayView
	       android:id="@+id/calendar_list"
			android:choiceMode="singleChoice"
	       android:layout_width="match_parent"
	       android:divider="@color/white"
	       android:scrollbars="horizontal"
	      
	       android:layout_height="60dp"
	       android:drawSelectorOnTop="false"
	       style="@style/TwoWayView"
	       tools:context=".MainActivity"/>

         <ru.rgups.time.views.CalendarHint 
             android:id="@+id/calendar_list_hint"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
			 android:textStyle="bold"
			 android:visibility="gone"
			 android:textColor="@color/theme_blue"
			 android:background="@color/theme_green"
			 android:textSize="20sp"
			 android:padding="10dp"/>
        
    </RelativeLayout>
   

    <ListView
        android:id="@+id/lesson_list"
        android:scrollbarStyle="outsideOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
    <RelativeLayout 
        android:id="@+id/lesson_epty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView 
            
            android:text="Пар нет"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>