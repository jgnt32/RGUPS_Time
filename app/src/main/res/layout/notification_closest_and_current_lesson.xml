<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:src="@drawable/ic_launcher"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/notification_currenr_lesson_cotainer"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:id="@+id/notification_current_lesson_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_lesson"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/notification_current_lesson_title"
            android:layout_width="match_parent"
            android:lines="1"
            android:textColor="@color/secondary_text"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="Физика"/>

        <TextView
            android:id="@+id/notification_current_lesson_room"
            android:layout_marginLeft="10dp"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Д406"/>

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/notification_closest_lesson_cotainer"
        android:padding="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notification_lesson_status"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_lesson"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/notification_closest_lesson_title"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:lines="1"
            android:text="Физика"/>

        <TextView
            android:id="@+id/notification_closest_lesson_room"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary_text"
            android:text="Д406"/>

    </LinearLayout>



</LinearLayout>